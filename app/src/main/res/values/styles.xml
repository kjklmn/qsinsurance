<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="style0">
        <item name="android:textSize">20px</item>
        <item name="android:textColor">@color/money_color</item>
    </style>

    <style name="style1">
        <item name="android:textSize">30px</item>
        <item name="android:textColor">@color/money_color</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="style2">
        <item name="android:textSize">22px</item>
        <item name="android:textColor">@color/money_color</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@mipmap/splash_icon</item>
    </style>

    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">查看详情</item>
    </style>
</resources>
