<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="258px"
        android:layout_marginBottom="12px"
        android:orientation="horizontal"
        android:paddingLeft="12px"
        android:paddingRight="12px"
        android:paddingTop="12px">

        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="234px"
            android:layout_height="234px"
            android:src="@mipmap/is" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="34px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_level"
                android:layout_width="match_parent"
                android:layout_height="35px"
                android:gravity="left|center_vertical"
                android:text="一级意外"
                android:textColor="#333333"
                android:textSize="18px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/bg_line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="484px"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingTop="8px">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_s_item"
                        android:gravity="left|center_vertical"
                        android:text="产品介绍文案"
                        android:textColor="#999999"
                        android:textSize="14px"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_s_item"
                        android:orientation="horizontal"
                        android:paddingTop="12px">

                        <ImageView
                            android:layout_width="15px"
                            android:layout_height="17px"
                            android:layout_gravity="left|center_vertical"
                            android:src="@mipmap/arrow" />

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:gravity="center"
                            android:text="投保计划"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/tv_plan_a"
                            android:layout_width="@dimen/text_size_w"
                            android:layout_height="@dimen/text_size_h"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:background="@drawable/bg_plan_b"
                            android:gravity="center"
                            android:text="A款"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/tv_plan_b"
                            android:layout_width="@dimen/text_size_w"
                            android:layout_height="@dimen/text_size_h"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:background="@drawable/bg_plan_a"
                            android:gravity="center"
                            android:text="B款"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/tv_plan_c"
                            android:layout_width="@dimen/text_size_w"
                            android:layout_height="@dimen/text_size_h"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:background="@drawable/bg_plan_a"
                            android:gravity="center"
                            android:text="C款"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="248px"
                        android:layout_height="52px"
                        android:layout_marginLeft="118px"
                        android:layout_marginRight="118px"
                        android:background="@mipmap/select_one"
                        android:ellipsize="end"
                        android:lines="2"
                        android:paddingLeft="6px"
                        android:paddingTop="8px"
                        android:text="手术医疗意外伤害 （含意外、麻醉身故险，伤残保险责任） 20万元"
                        android:textColor="#888888"
                        android:textSize="14px"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_s_item"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15px"
                            android:layout_height="17px"
                            android:layout_gravity="left|center_vertical"
                            android:src="@mipmap/arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:gravity="center"
                            android:text="起保日期"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />

                        <EditText
                            android:id="@+id/tvShowDate"
                            android:layout_width="156px"
                            android:layout_height="36px"
                            android:layout_gravity="left|center_vertical"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:background="@drawable/bg_date"
                            android:clickable="true"
                            android:drawableEnd="@mipmap/date_icon_t"
                            android:editable="false"
                            android:focusable="false"
                            android:gravity="center_vertical|left"
                            android:paddingLeft="8px"
                            android:paddingRight="8px"
                            android:text="日期长度"
                            android:textColor="@color/text_color_1"
                            android:textSize="14px" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/height_s_item"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="15px"
                            android:layout_height="17px"
                            android:layout_gravity="left|center_vertical"
                            android:src="@mipmap/arrow" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/marginleft_1"
                            android:gravity="center"
                            android:text="保费"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />

                        <TextView
                            android:id="@+id/tv_cost"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="52px"
                            android:gravity="center"
                            android:paddingBottom="6px"
                            android:text="￥52.50"
                            android:textColor="@color/text_color_1"
                            android:textSize="16px" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="0px"
                    android:layout_weight="1"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:layout_width="232px"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_qrcode"
                        android:layout_width="162px"
                        android:layout_height="162px"
                        android:src="@mipmap/qrcode" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8px"
                        android:gravity="center"
                        android:text="扫一扫立即投保"
                        android:textColor="#fb6000"
                        android:textSize="16px" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20px"
        android:layout_marginRight="20px"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52px"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="20px"
        android:paddingRight="20px">

        <LinearLayout
            android:layout_width="224px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/interval" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4px"
                android:gravity="center"
                android:text="保障期限："
                android:textColor="#595959"
                android:textSize="16px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="1年"
                android:textColor="#595959"
                android:textSize="16px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="264px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/date_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4px"
                android:gravity="center"
                android:text="投保年龄："
                android:textColor="#595959"
                android:textSize="16px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="30天-60周岁"
                android:textColor="#595959"
                android:textSize="16px" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="224px"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/purchase_num" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="4px"
                android:gravity="center"
                android:text="购买份数："
                android:textColor="#595959"
                android:textSize="16px" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="限1份"
                android:textColor="#595959"
                android:textSize="16px" />
        </LinearLayout>

        <TextView
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="86px"
            android:layout_height="33px"
            android:layout_marginRight="32px"
            android:src="@mipmap/logo_pingan" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/bg_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420px"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20px"
            android:layout_marginLeft="@dimen/marginleft_1"
            android:layout_marginTop="20px"
            android:gravity="center"
            android:text="保障责任"
            android:textColor="#333333"
            android:textSize="18px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:layout_marginLeft="20px"
            android:layout_marginRight="22px"
            android:background="@color/line_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_width="0px"
                android:layout_weight="1"
                android:layout_height="336px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="104px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="手术意外身故险"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="10万元"
                        android:id="@+id/tv_fee_surgical"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="2.4"
                        android:gravity="left|center_vertical"
                        android:text="@string/descri_surgical_accid"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/bg_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="84px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="麻醉意外身故险"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="10万元"
                        android:id="@+id/tv_fee_anesthetic"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="2.4"
                        android:gravity="left|center_vertical"
                        android:text="@string/descri_anesthetic_accid"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/bg_line" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="144px"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="伤残保险责任"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"
                        android:gravity="center"
                        android:text="10万元"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px"
                        android:id="@+id/tv_fee_disable"/>

                    <TextView
                        android:layout_width="0px"
                        android:layout_height="match_parent"
                        android:layout_weight="2.4"
                        android:gravity="left|center_vertical"
                        android:text="@string/descri_disable_liability"
                        android:textColor="@color/text_color_1"
                        android:textSize="16px" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="@dimen/line_thickness"
                android:layout_height="match_parent"
                android:background="@color/line_color" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_thickness"
            android:layout_marginLeft="20px"
            android:layout_marginRight="22px"
            android:background="@color/line_color" />
    </LinearLayout>

</LinearLayout>